@using LuckyWithYouForum.Models
@model UserPostViewModel
@{
            Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
       
               <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">

   <style>
       body {
  margin: auto;

}

.sidebar {
        grid-area: sidebar;
    }

    .content {
        grid-area: content;
    }

    .header {
        grid-area: header;
    }

    .footer {
        grid-area: footer;
    }
    .row{
        grid-area: row;
    }

    .wrapper {
        align-self:center;
        display: grid;
        grid-gap: 5px;
        grid-template-columns: 20% 80%;
        grid-template-areas:
        "....... header"
        "footer  footer"
        "sidebar content";
        color: #444;
        font-family: 'Rubik', sans-serif;
    }
    .wrapperdiscussion{
        align-self:center;
        display: grid;  
        grid-gap: 5px;
        grid-template-columns: 20% 80%;
        grid-template-areas:
        "footer  footer"
        "sidebar content";
        background-color: #f5f5f5;
        color: #444;
        font-family: 'Rubik', sans-serif;
    }
    .wrappersend{
        align-self:center;
        align-items:center;
        align-content:center;
        display: grid;  
        grid-gap: 5px;
        grid-template-columns: 100%;
        grid-template-rows: max-content;
        grid-template-areas:
        "footer "
        "content"
        "footer";
        background-color: #f5f5f5;
        color: #444;
                font-family: 'Rubik', sans-serif;
    }

.box {
  background-color: #444;
  color: #fff;
  border-radius: 5px;
  padding: 10px;
  font-size: 70%;
}
.center {
    margin: auto;
    width: 95%;
    border: 1px dotted #444;
    padding: 10px;
}
.header {
  background-color: #87CEFA;

}
.footer,sidebar {
  background-color: #F4F4FF;
  color: #87CEFA;

}
.content {
  background-color: #D2D3FF;
}
   </style>

</head>
<body>
    
 
     <div class="wrapper-newmessage centermy">
    @using (Html.BeginForm("AddPost", "Home", FormMethod.Post))
{    
    

    @Html.Hidden("usermail", (object)ViewBag.currentUser.usermail)
    @Html.Hidden("countofposts", (object)ViewBag.currentUser.countofposts)
    @Html.Hidden("name", (object)ViewBag.currentUser.name)
    @Html.Hidden("password", (object)ViewBag.currentUser.password)

 
  
            <div class="box header">@ViewBag.currentUser.name</div>
         
            <div class="box footer">
                נושא:                 
                @Html.TextBoxFor(model => model.topic, new { @class = "form-control" })
                </div>
        
        <div class="box sidebar">
                קטגוריה:              
                @Html.TextBoxFor(model => model.subject, new { @class = "form-control" })

            </div>
            <div class="box content">
             @Html.TextAreaFor(model => model.text, 10,40, htmlAttributes: new {style="width: 100%; max-width: 100%;"})
            </div>
            <div class="box footer">
                <button class = "btn btn-primary btn-lg" type="submit">שלח</button>

            </div>


  
    
    }
        </div>
</body>
</html>
